<h2> Create Account</h2>
<%=form_tag '/users', method: :post do%>
 <div>
  <%= label_tag :first_name%><br>
  <%= text_field_tag :first_name%><br>
 </div>
 <div>
  <%= label_tag :last_name%><br>
  <%= text_field_tag :last_name%><br>
 </div>
 <div>
  <%= label_tag :role%><br>
  <%= select_tag :role, options_for_select(['author', 'guest']) %><br>
 </div>
 <div>
  <%= label_tag :email%><br>
  <%= text_field_tag :email%><br>
 </div>
 <div>
  <%= label_tag :password%><br>
  <%= password_field_tag :password%><br>
 </div>
 <div>
  <%= label_tag :password_confirmation%><br>
  <%= password_field_tag :password_confirmation%><br>
 </div>
 
<%= submit_tag 'Sign Up', class: 'btn btn-default'%>
<%end%>