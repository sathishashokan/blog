<h2>Login</h2>
<%= form_with(url: login_path, local: true) do |form| %>
  <%= form.label :email %><br>
  <%= form.email_field :email, class: 'form-control', required: true %><br><br>

  <%= form.label :password %><br>
  <%= form.password_field :password, class: 'form-control', required: true %><br><br>

  <%= form.submit 'Log in', class: 'btn btn-primary' %>
  
<% end %>
